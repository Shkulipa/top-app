{
	"extends": [
		"stylelint-config-standard"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"indentation": [
			"tab"
		],
    "selector-class-pattern": [
      "^([a-z]|[a-z][a-zA-Z0-9])+$",
      {
        "message": "Expected custom property name to be camelCase"
      }
    ],
		"color-hex-case": "upper"
	}
}